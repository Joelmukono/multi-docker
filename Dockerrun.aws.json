{
    "AWSEBDockerrunVersion":2,
    "ContainerDefinitions":[
        {
            "name":"client",
            "image":"joelmukono/multi-client",
            "hostname":"client",
            "essential":false,
            "memory": 128
        },
        {
            "name":"server",
            "image":"joelmukono/multi-server",
            "hostname":"api",
            "essential":false,
            "memory": 128
        },
        {
            "name":"worker",
            "image":"joelmukono/multi-worker",
            "hostname":"worker",
            "essential":false,
            "memory": 128
        },
        {
            "name":"nginx",
            "image":"joelmukono/multi-nginx",
            "essential":true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],

            "links":["client", "server"],
            "memory": 128
        }
    ]
}